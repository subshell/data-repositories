{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
	  "ES2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude":  [
    "./lib",
    "./node_modules"
  ]
}
